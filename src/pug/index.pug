      img(src='img/burg_6.jpg' srcset='img/burg_6@2x.jpg 2x')
        
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_7.jpg' srcset='img/burg_7@2x.jpg 2x')
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_8.jpg' srcset='img/burg_8@2x.jpg 2x')
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_9.jpg' srcset='img/burg_9@2x.jpg 2x')
        
  
  // DELIVERY :: START
  .delivery#sectionDelivery
    picture
      source(media="(min-width: 568px)" srcset="img/el/deliveryBg.jpg 1x, img/el/deliveryBg.jpg 2x")
      source(media="(max-width: 568px)" srcset="img/el/mobileDelivery.jpg 1x, img/el/mobileDelivery@2x.jpg 2x")
      img.section-bg(src="img/el/deliveryBg.jpg")
    .container
      .delivery__wrapper
        // title
        .title
          .title__wrapper
            span Доставка
        
        //- .delivery__row
        //-   .delivery__el(data-animation-delay=".2s")
