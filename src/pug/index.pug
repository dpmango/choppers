extends shared/_layout
block content
  
  // HERO :: START
  .hero
    picture
      source(media="(min-width: 568px)" srcset="img/el/heroBg.jpg")
      source(media="(max-width: 568px)" srcset="img/el/mobileHero.jpg 1x, img/el/mobileHero@2x.jpg 2x")
      img.section-bg(src="img/el/heroBg.jpg")
    .container
      .hero__wrapper
        i.icon.icon-man_logo(data-animation-delay=".1s")
        .hero__title(data-animation-delay=".5s") Мы готовим <br> самые вкусные бургеры <br> в Оренбурге
        
        .hero__cta
          a(href="#sectionMenu").btn.btn-primary.wow(data-animation-delay=".2s")
            span Меню
          a(href="#sectionDelivery").btn.btn-primary.wow(data-animation-delay=".4s")
            span Доставка

  // INSTA :: START
  a(href="https://www.instagram.com/choppersorenburg/" target="_blank").insta
    img.section-bg.section-bg--h-mobile(src='img/el/instaBg.png' srcset='img/el/instaBg@2x.png 2x')
    img.mobile-image(src='img/el/mobileInsta.jpg' srcset='img/el/mobileInsta@2x.jpg 2x')
    .container
      .insta__wrapper
        .insta__title(data-animation-delay="2s") Присоединяйтесь к нам в Instagram
        .insta__social(data-animation-delay="2.25s")
          i.icon.icon-insta-logo
          span choppersorenburg
  
  .insta-feed(js-popup-gallery)
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_1.jpg' srcset='img/burg_1@2x.jpg 2x')
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_2.jpg' srcset='img/burg_2@2x.jpg 2x')
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_3.jpg' srcset='img/burg_3@2x.jpg 2x')
        
    a.insta-feed__pic(href="https://www.instagram.com/choppersorenburg/" target="_blank")
      img(src='img/burg_4.jpg' srcset='img/burg_4@2x.jpg 2x')
