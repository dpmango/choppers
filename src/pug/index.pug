        img.delivery__row-mobile(src="img/el/deliveryMobileContent.png" srcset="img/el/deliveryMobileContent@2x.png 2x")
        
        .delivery__cta
          .delivery__cta-letters.wow(data-animation-delay=".2s" data-animation-class="wowFadeLeft")
            picture
              source(media="(min-width: 568px)" srcset="img/el/deliveryCtaLetters.png 1x, img/el/deliveryCtaLetters@2x.png 2x")
              source(media="(max-width: 568px)" srcset="img/el/deliveryCtaLettersMobile.png 1x, img/el/deliveryCtaLettersMobile@2x.png 2x")
              img(src="img/el/deliveryCtaLetters.png")

          a(href='tel:+73532428062').delivery__cta-phone
            img(src='img/el/deliveryCtaPhone.png' srcset='img/el/deliveryCtaPhone@2x.png 2x').wow(data-animation-delay=".4s" data-animation-class="wowFadeRight")
  
  // MENU :: START
  .menu#sectionMenu
    img.section-bg.section-bg--h-tablet(src='img/el/menuBg.jpg' srcset='img/el/menuBg@2x.jpg 2x')
    .container
      .menu__wrapper
        .menu__slider(data-animation-delay=".2s" data-current-slide="1")
          a(href='img/menu.merged.compressed.pdf' target="_blank").menu__slide
            picture
              // source(media="(min-width: 768px)" srcset="img/menu1.jpg 1x, img/menu1@2x.jpg 2x")
              source(media="(max-width: 768px)" srcset="img/menu1Mobile.jpg")
              img(src="img/menu1.jpg")
                
          a(href='img/menu.merged.compressed.pdf' target="_blank").menu__slide
            picture
              // source(media="(min-width: 768px)" srcset="img/menu2.jpg 1x, img/menu2@2x.jpg 2x")
              source(media="(max-width: 768px)" srcset="img/menu2Mobile.jpg")
              img(src="img/menu2.jpg")
  
  // INTERIOR :: START
  .interior#sectionInterior
    picture
      source(media="(min-width: 568px)" srcset="img/el/interiorBg.jpg 1x, img/el/interiorBg@2x.jpg 2x")
      source(media="(max-width: 568px)" srcset="img/el/mobileInterior.jpg 1x, img/el/mobileInterior@2x.jpg 2x")
      img.section-bg(src="img/el/interiorBg.jpg")
    .container
      .interior__wrapper
        // title
        .title(data-animation-delay=".2s")
          .title__wrapper
            span Интерьер
            
        .interior__slider(data-animation-delay=".2s")
          .interior__slide
            img(src='img/interiorImg_1.jpg')
          .interior__slide
            img(src='img/interiorImg_2.jpg')
          .interior__slide
            img(src='img/interiorImg_3.jpg')
              
  // CONTACT :: START
  .contact#sectionContacts
    picture
      source(media="(min-width: 568px)" srcset="img/el/contactBg.jpg 1x, img/el/contactBg@2x.jpg 2x")
      source(media="(max-width: 568px)" srcset="img/el/mobileContacts.jpg 1x, img/el/mobileContacts@2x.jpg 2x")
      img.section-bg(src="img/el/contactBg.jpg")
    .container
      .contact__wrapper
        // title
        .title.title--black(data-animation-delay=".2s")
          .title__wrapper
            span Контакты
        
        .contact__info
          .contact__credentials(data-animation-delay=".4s")
            .contact__adress Оренбург, <br> ул. 9 Января, 28
            a(href="mailto:orenburg@choppers.cafe").contact__email orenburg@choppers.cafe
            a(href="tel:+73532428062").contact__phone 42-80-62
          .contact__map(data-animation-delay="1s")
